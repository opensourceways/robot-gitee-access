load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@bazel_gazelle//:def.bzl", "gazelle")
load("@github_opensourceways_robot_gitee_plugin_lib//:deps.bzl","build_image", "push_image", "image_tags")

# gazelle:prefix github.com/opensourceways/robot-gitee-access
gazelle(name = "gazelle")

go_library(
    name = "go_default_library",
    srcs = [
        "agent.go",
        "config.go",
        "dispatcher.go",
        "main.go",
    ],
    importpath = "github.com/opensourceways/robot-gitee-access",
    visibility = ["//visibility:private"],
    deps = [
        "@com_github_opensourceways_robot_gitee_plugin_lib//config:go_default_library",
        "@com_github_opensourceways_robot_gitee_plugin_lib//giteeclient:go_default_library",
        "@com_github_opensourceways_robot_gitee_plugin_lib//interrupts:go_default_library",
        "@com_github_opensourceways_robot_gitee_plugin_lib//logrusutil:go_default_library",
        "@com_github_opensourceways_robot_gitee_plugin_lib//options:go_default_library",
        "@com_github_opensourceways_robot_gitee_plugin_lib//secret:go_default_library",
        "@com_github_opensourceways_robot_gitee_plugin_lib//utils:go_default_library",
        "@com_github_sirupsen_logrus//:go_default_library",
        "@io_k8s_apimachinery//pkg/util/sets:go_default_library",
    ],
)

go_binary(
    name = "robot-gitee-access",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

build_image(
    name = "image",
    base = "@alpine_linux_amd64//image",
    visibility = ["//visibility:public"],
)

push_image(
    name = "image-push",
    bundle_name = "release",
    images = image_tags(
        target = "//:image"
    ),
)